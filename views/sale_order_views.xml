<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire sale.order avec BL -->
    <record id="view_order_form_delivery_note" model="ir.ui.view">
        <field name="name">sale.order.form.delivery.note</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Ajouter bouton BL dans le header -->
            <button name="action_confirm" position="after">
                <button name="action_view_delivery_notes"
                        type="object"
                        string="Bons de Livraison"
                        class="btn-secondary"
                        attrs="{'invisible': [('delivery_note_count', '=', 0)]}"
                        groups="stock.group_stock_user"/>

                <button name="action_create_delivery_note"
                        type="object"
                        string="Créer BL"
                        class="btn-primary"
                        attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"
                        groups="stock.group_stock_user"/>
            </button>

            <!-- Ajouter smart button pour les BL -->
            <div name="button_box" position="inside">
                <button type="object"
                        name="action_view_delivery_notes"
                        class="oe_stat_button"
                        icon="fa-truck"
                        attrs="{'invisible': [('delivery_note_count', '=', 0)]}">
                    <field name="delivery_note_count" widget="statinfo" string="Bons de Livraison"/>
                </button>
            </div>

            <!-- Ajouter les champs dans l'en-tête -->
            <field name="partner_id" position="after">
                <field name="delivery_note_status"
                       attrs="{'invisible': [('delivery_note_count', '=', 0)]}"/>
            </field>

            <!-- Enrichir les lignes de commande -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='qty_delivered']" position="after">
                <field name="qty_delivered_bl"
                       string="Livré (BL)"
                       attrs="{'column_invisible': [('parent.delivery_note_count', '=', 0)]}"/>
            </xpath>

        </field>
    </record>

    <!-- Vue liste sale.order avec colonnes BL -->
    <record id="view_order_tree_delivery_note" model="ir.ui.view">
        <field name="name">sale.order.tree.delivery.note</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

            <field name="activity_ids" position="before">
                <field name="delivery_note_count" optional="hide"/>
                <field name="delivery_note_status" optional="show"/>
            </field>

        </field>
    </record>

    <!-- Filtres de recherche -->
    <record id="view_sales_order_search_delivery_note" model="ir.ui.view">
        <field name="name">sale.order.search.delivery.note</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">

            <filter name="my_sale_orders_filter" position="after">
                <separator/>
                <filter name="with_delivery_notes"
                        string="Avec Bons de Livraison"
                        domain="[('delivery_note_count', '>', 0)]"/>
                <filter name="bl_partial"
                        string="BL Partiels"
                        domain="[('delivery_note_status', '=', 'partial')]"/>
                <filter name="bl_complete"
                        string="BL Complets"
                        domain="[('delivery_note_status', '=', 'done')]"/>
            </filter>

            <group expand="0" string="Group By" position="inside">
                <filter string="État BL"
                        name="groupby_delivery_note_status"
                        domain="[]"
                        context="{'group_by': 'delivery_note_status'}"/>
            </group>

        </field>
    </record>

</odoo>